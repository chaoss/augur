<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>API Keys - Augur View</title>
    <link rel="apple-touch-icon" sizes="180x180"
        href="{{ url_for('static', filename='favicon/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32"
        href="{{ url_for('static', filename='favicon/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16"
        href="{{ url_for('static', filename='favicon/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ url_for('static', filename='favicon/site.webmanifest') }}">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/stylesheet.css') }}" rel="stylesheet">
    <style>
        .inline-form .form-control,
        .inline-form .form-select {
            display: inline-block;
            width: auto;
            vertical-align: middle;
        }
    </style>
</head>

<body>
    {% include 'navbar.j2' %}
    <div class="container mt-4">
        <h1>Manage API Keys</h1>

        <div class="card mb-4">
            <div class="card-body">
                <h2>Your API Keys</h2>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Key Type</th>
                            <th>API Key</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>GitHub</td>
                            <td>
                                <code id="github-key" data-key="">
                                    **************
                                </code>
                                <button class="btn btn-sm btn-outline-secondary"
                                    onclick="toggleKey('github-key')">Show</button>
                            </td>
                        </tr>
                        <tr>
                            <td>GitLab</td>
                            <td>
                                <code id="gitlab-key" data-key="">
                                    **************
                                </code>
                                <button class="btn btn-sm btn-outline-secondary"
                                    onclick="toggleKey('gitlab-key')">Show</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Add New API Key</h2>
                <form>
                    <div class="row g-2 align-items-center">
                        <div class="col-md-2">
                            <label for="platformSelect" class="form-label">Platform</label>
                            <select class="form-select" id="platformSelect" name="platform">
                                <option value="github">GitHub</option>
                                <option value="gitlab">GitLab</option>
                            </select>
                        </div>
                        <div class="col-md-10">
                            <label for="apiKeyInput" class="form-label">API Key</label>
                            <div class="row g-2">
                                <div class="col-9">
                                    <input type="text" class="form-control" id="apiKeyInput" name="api_key"
                                        placeholder="">
                                </div>
                                <div class="col-3">
                                    <a id="helperLink" href="" target="_blank" class="btn btn-outline-secondary w-100">
                                        Generate
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="button" class="btn btn-primary" onclick="saveNewKey()">Save API Key</button>
                    </div>
                </form>
            </div>
        </div>


    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle key visibility for API keys in the table
        function toggleKey(elementId) {
            var el = document.getElementById(elementId);
            var btn = el.nextElementSibling;
            var actualKey = el.getAttribute("data-key");
            if (el.innerText.trim() === actualKey) {
                el.innerText = "*".repeat(15);
                btn.innerText = "Show";
            } else {
                el.innerText = actualKey;
                btn.innerText = "Hide";
            }
        }

        // Fetch the API keys from the backend config (from the "Keys" section)
         function fetchApiKeys() {
                // Fetch GitHub key
                $.ajax({
                    url: "/api/unstable/config/keys/get?setting_name=github_api_key",
                    type: "GET",
                    success: function (response) {
                        if (response && response !== "") {
                            $("#github-key").attr("data-key", response).text("**************");
                        } else {
                            $("#github-key").attr("data-key", "").text("No key configured");
                        }
                    },
                    error: function (err) {
                        console.error("Error fetching GitHub API key", err);
                        $("#github-key").attr("data-key", "").text("Error loading key");
                    }
                });

                // Fetch GitLab key
                $.ajax({
                    url: "/api/unstable/config/keys/get?setting_name=gitlab_api_key",
                    type: "GET",
                    success: function (response) {
                        if (response && response !== "") {
                            $("#gitlab-key").attr("data-key", response).text("**************");
                        } else {
                            $("#gitlab-key").attr("data-key", "").text("No key configured");
                        }
                    },
                    error: function (err) {
                        console.error("Error fetching GitLab API key", err);
                        $("#gitlab-key").attr("data-key", "").text("Error loading key");
                    }
                });
            }

        // Save a new API key using the existing update endpoint.
        function saveNewKey() {
            var platform = document.getElementById("platformSelect").value;
            var keyInput = document.getElementById("apiKeyInput").value;
            var updateData = { "Keys": {} };

            if (platform === "github") {
                updateData.Keys["github_api_key"] = keyInput;
            } else if (platform === "gitlab") {
                updateData.Keys["gitlab_api_key"] = keyInput;
            }
            $.ajax({
                url: "/api/unstable/config/update",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(updateData),
                success: function (response) {
                    alert("API key saved successfully!");
                    fetchApiKeys();
                },
                error: function (err) {
                    alert("Error saving API key");
                }
            });
        }

        // Update the API key input's placeholder and helper link based on selected platform.
        function updateKeyForm() {
            var platform = document.getElementById("platformSelect").value;
            var keyInput = document.getElementById("apiKeyInput");
            var helperLink = document.getElementById("helperLink");

            if (platform === "github") {
                keyInput.placeholder = "e.g. ghp_XXXXXXXXXXXX";
                helperLink.href = "https://github.com/settings/tokens";
                helperLink.innerText = "Generate GitHub API key";
            } else if (platform === "gitlab") {
                keyInput.placeholder = "e.g. glpat-XXXXXXXXXXXX";
                helperLink.href = "https://gitlab.com/profile/personal_access_tokens";
                helperLink.innerText = "Generate GitLab API key";
            } else {
                keyInput.placeholder = "Enter API key";
                helperLink.href = "#";
                helperLink.innerText = "";
            }
        }

        // Attach event listeners
        document.getElementById("platformSelect").addEventListener("change", updateKeyForm);
        window.addEventListener("DOMContentLoaded", function () {
            updateKeyForm();
            fetchApiKeys();
        });
    </script>
</body>

</html>