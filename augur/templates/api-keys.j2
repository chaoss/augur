<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>API Keys - Augur View</title>
    <link rel="apple-touch-icon" sizes="180x180"
        href="{{ url_for('static', filename='favicon/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32"
        href="{{ url_for('static', filename='favicon/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16"
        href="{{ url_for('static', filename='favicon/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ url_for('static', filename='favicon/site.webmanifest') }}">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/stylesheet.css') }}" rel="stylesheet">
    <style>
        /* Optional: Ensures the input group elements don't wrap on small screens */
        .inline-form .form-control,
        .inline-form .form-select {
            display: inline-block;
            width: auto;
            vertical-align: middle;
        }
    </style>
</head>

<body>
    {% include 'navbar.j2' %}
    <div class="container mt-4">
        <h1>Manage API Keys</h1>

        <!-- Display Existing API Keys -->
        <div class="card mb-4">
            <div class="card-body">
                <h2>Your API Keys</h2>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Key Type</th>
                            <th>API Key</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>GitHub</td>
                            <td>
                                <code id="github-key" data-key="dummy_github_key_123">
                  **************
                </code>
                                <button class="btn btn-sm btn-outline-secondary"
                                    onclick="toggleKey('github-key')">Show</button>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-danger"
                                    onclick="deleteKey('github_api_key')">Delete</button>
                            </td>
                        </tr>
                        <tr>
                            <td>GitLab</td>
                            <td>
                                <code id="gitlab-key" data-key="dummy_gitlab_key_456">
                  **************
                </code>
                                <button class="btn btn-sm btn-outline-secondary"
                                    onclick="toggleKey('gitlab-key')">Show</button>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-danger"
                                    onclick="deleteKey('gitlab_api_key')">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Add New API Key -->
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Add New API Key</h2>
                <form>
                    <div class="row g-2 align-items-center">
                        <!-- Platform Dropdown -->
                        <div class="col-md-2">
                            <label for="platformSelect" class="form-label">Platform</label>
                            <select class="form-select" id="platformSelect" name="platform">
                                <option value="github">GitHub</option>
                                <option value="gitlab">GitLab</option>
                                <!-- Future platforms can be added here -->
                            </select>
                        </div>
                        <!-- API Key Input and Generate Button -->
                        <div class="col-md-10">
                            <label for="apiKeyInput" class="form-label">API Key</label>
                            <div class="row g-2">
                                <div class="col-9">
                                    <input type="text" class="form-control" id="apiKeyInput" name="api_key" placeholder="">
                                </div>
                                <div class="col-3">
                                    <a id="helperLink" href="" target="_blank" class="btn btn-outline-secondary w-100">
                                        Generate
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="button" class="btn btn-primary" onclick="saveNewKey()">Save API Key</button>
                    </div>
                </form>
            </div>
        </div>


    </div>

    <!-- Bootstrap and jQuery scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle key visibility for API keys in the table
        function toggleKey(elementId) {
            var el = document.getElementById(elementId);
            var btn = el.nextElementSibling;
            var actualKey = el.getAttribute("data-key");
            if (el.innerText.trim() === actualKey) {
                el.innerText = "*".repeat(actualKey.length);
                btn.innerText = "Show";
            } else {
                el.innerText = actualKey;
                btn.innerText = "Hide";
            }
        }

        // Dummy function for delete action on existing keys
        function deleteKey(keyType) {
            if (confirm("Are you sure you want to delete the " + keyType + "?")) {
                alert(keyType + " deleted (dummy action).");
            }
        }

        // Dummy function for saving new keys
        function saveNewKey() {
            alert("New API key saved (dummy action).");
        }

        // Update the API key input's placeholder and helper link based on selected platform
        function updateKeyForm() {
            var platform = document.getElementById("platformSelect").value;
            var keyInput = document.getElementById("apiKeyInput");
            var helperLink = document.getElementById("helperLink");

            if (platform === "github") {
                keyInput.placeholder = "e.g. GH_XXXXXXXXXXXX";
                helperLink.href = "https://github.com/settings/tokens";
                helperLink.innerText = "Generate GitHub API key";
            } else if (platform === "gitlab") {
                keyInput.placeholder = "e.g. GL-XXXXXXXXXXXX";
                helperLink.href = "https://gitlab.com/profile/personal_access_tokens";
                helperLink.innerText = "Generate GitLab API key";
            } else {
                keyInput.placeholder = "Enter API key";
                helperLink.href = "#";
                helperLink.innerText = "";
            }
        }

        // Attach event listeners
        document.getElementById("platformSelect").addEventListener("change", updateKeyForm);
        window.addEventListener("DOMContentLoaded", updateKeyForm);
    </script>
</body>

</html>