{<% if (!isRootApp) { %>
  "extends": "<%= relativePathToWorkspaceRoot %>/tslint.json",<%
  } %>
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "<%= utils.camelize(prefix) %>",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "<%= utils.dasherize(prefix) %>",
      "kebab-case"
    ]
  }
}
